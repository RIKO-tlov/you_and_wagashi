<div class="container text-center">
  <div class="row">
    <div class="col-sm-4 mx-auto my-5">
      <h2 class="title pb-3">レビュー投稿編集</h1>
    </div>
  </div>
  <%= form_with(model:[@shop, @review], :url => {:action => :update}, local: true) do |f| %>
  <%= render 'public/reviews/review_form', f: f %>
  <div class="row">
    <div class="col-sm-12">
      <%= f.submit '編集を保存', class:"button mt-5" %>
    </div>
  </div>
  <% end %>
</div>