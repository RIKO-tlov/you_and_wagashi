<div class="container text-center">
  <div class="row">
    <div class="col-sm-3 mx-auto my-5">
    <p class="pt-5"><%= @shop.kana_name %></p>
    <h2 class="title font-weight-bold pb-2"><%= @shop.name %></h2>
  </div>
  </div>
  <div class="row">
    <div class="col-sm-7 mx-auto mb-3">
      <%= attachment_image_tag @shop, :shop_image, format: 'jpeg', fallback: "no_image.png", class:"main-image" %>
    </div>
  </div>
  <%= form_with(model:[@shop, @review], :url => {:action => :create}, local: true) do |f| %>
  <%= render 'public/reviews/review_form', f: f %>
  <div class="row">
  <div class="col-sm-12">
    <%= f.submit '投稿する', class:"btn-flat-logo mt-3" %>
  </div>
  </div>
  <% end %>
</div>


