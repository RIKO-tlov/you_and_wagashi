<div class="container text-center">
  <div class="row">
    <div class="col-sm-3 mx-auto my-5">
      <h2 class="title font-weight-bold pb-2">レビューを書く</h2>
    </div>
  </div>
  <%= form_with(model:[@shop, @review], :url => {:action => :create}, local: true) do |f| %>
  <%= render 'public/reviews/review_form', f: f %>
  <div class="row">
    <div class="col-sm-12">
      <%= f.submit '投稿する', class:"button mt-5" %>
    </div>
  </div>
  <% end %>
</div>