<div class="container">
  <div class="row">
    <div class="col-sm-12 my-5">
      <h2 class="mb-5 font-weight-bold"><i class="far fa-user"></i>マイページ</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4">
      <%= attachment_image_tag @user, :profile_image, :fill, 200, 200, format: 'jpeg', fallback: "no_image.png", size:'200x200'%>
    </div>
    <div class="col-sm-8">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>名前</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td>生年月日</td>
            <td><%= @user.birthdate %></td>
          </tr>
          <tr>
            <td>年齢</td>
            <td><%= @user.age %></td>
          </tr>
          <tr>
            <td>行った店</td>
            <td>
              <%= link_to visits_users_path do %>
                <%= @user.visits.count %>件
              <% end %>
            </td>
          </tr>
          <tr>
            <td>行きたい店</td>
            <td>
              <%= link_to wishes_users_path do %>
                <%= @user.wishes.count %>件
              <% end %>
            </td>
          </tr>
          <tr>
            <td>レビューした店</td>
            <td>
              <%#= link_to reviews_users_path do %>
                <%#= @user.reviews.count %>件
              <%# end %>
            </td>
          </tr>
        </tbody>
      </table>
      <% if @user.id == current_user.id %>
        <%= link_to "編集", edit_user_path(@user.id), class: "btn btn-dark btn-sm mr-4 mt-3" %>
      <% end %>
    </div>
  </div>
</div>