<div class="container shadow-lg mt-3 pb-5">
  <div class="row">
    <div class="col-sm-3 col-md-6 mx-auto py-5">
      <h2 class="title text-center pb-3">ランキング</h2>
    </div>
  </div>
  <% @all_ranks.each.with_index(1) do |shop, i| %>
  <div class="row mb-3">
    <div class="col-sm-12 col-md-12">
      <h3 class="rank text-center my-4">
        <i class="fas fa-crown"></i>
          第 <%= i %> 位
        <i class="fas fa-crown"></i>
      </h3>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4 offset-sm-3">
      <%= attachment_image_tag shop, :shop_image, :fill, 200, 200, format: 'jpeg', fallback: "no_image.png", size:'200x200', class:"image" %>
    </div>
    <div class="col-sm-5">
      <p class="mt-4"><%= shop.kana_name %></p>
      <h4 class="font-weight-bold"><%= shop.name %></h4>
      <p><%= shop.address %></p>
      <%= link_to "more", shop_path(shop), class: "btn-border-bottom" %>
    </div>
  </div>
  <% end %>
</div>
