<div class="container">
  <div class="row">
    <div class="col-sm-12 my-5">
      <h1>ランキング</h1>
    </div>
    <% @all_ranks.each.with_index(1) do |shop, i| %>
    <div class="col-sm-12">
      <h3 class="rank">
        <i class="fas fa-crown"></i>
          第 <%= i %> 位
        <i class="fas fa-crown"></i>
      </h3>
    </div>
    <div class="row mx-3">
      <div class="col-xs-3">
        <%= attachment_image_tag shop, :shop_image, :fill, 200, 200, format: 'jpeg', fallback: "no_image.png", size:'200x200' %>
      </div>
      <div class="col-xs-3 ml-3">
        <p><%= shop.kana_name %></p>
        <h4 class="font-weight-bold"><%= shop.name %></h4>
        <p><%= shop.address %></p>
        <p>行ってみたい数 <%= shop.wishes.count %></p>
        <%= link_to "more", shop_path(shop), class: "btn btn-dark btn-sm mr-4 mt-3" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
