<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center">
      <h2 class="title pb-3">ランキング</h2>
    </div>
    <% @all_ranks.each.with_index(1) do |shop, i| %>
    <div class="col-sm-12 text-center">
      <h3 class="rank mt-5">
        <i class="fas fa-crown"></i>
          第 <%= i %> 位
        <i class="fas fa-crown"></i>
      </h3>
    </div>
    <div class="row mx-auto my-3">
      <div class="col-xs-3">
        <%= attachment_image_tag shop, :shop_image, :fill, 200, 200, format: 'jpeg', fallback: "no_image.png", size:'200x200', class:"image" %>
      </div>
      <div class="col-xs-3 ml-4">
        <p class="mt-4"><%= shop.kana_name %></p>
        <h4 class="font-weight-bold"><%= shop.name %></h4>
        <p><%= shop.address %></p>
        <%= link_to "more", shop_path(shop), class: "btn btn-dark btn-sm" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
