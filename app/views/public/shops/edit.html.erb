<div class="container text-center">
  <div class="row">
    <div class="col-sm-3 mx-auto py-5">
      <h2 class="title pb-3">和菓子店編集</h2>
    </div>
  </div>
  <%= form_with model: @shop, local: true do |f| %>
  <%= render 'public/shops/errors_message', shop: @shop %>
  <div class="row">
    <div class="col-sm-12 mb-3">
      <%= attachment_image_tag @shop, :shop_image, format: 'jpeg', fallback: "no_image.png", class:"main-image" %>
    </div>
  </div>
  <%= render 'public/shops/post_form', f: f  %>
  <%= f.submit "変更を保存", class:"btn-flat-bottom-border btn-sm mt-3" %>
  <%= link_to "削除", shop_path(@shop), class: "btn-flat-bottom-border-delete btn-sm mt-3", method: :delete, "data-confirm" => "本当に削除しますか？" %>
  <% end %>
</div>