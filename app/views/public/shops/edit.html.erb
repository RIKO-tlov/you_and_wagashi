<div class="container">
  <div class="row">
    <div class="col-sm-12 my-5">
      <h1></h1>
    </div>
  </div>
  <%= form_with model: @shop, local: true do |f| %>
  <div class="col-sm-4 my-3">
    <%= attachment_image_tag @shop, :shop_image, :fill, 200, 200, format: 'jpeg', fallback: "no_image.png", size:'200x200'%>
  </div>
  <%= render 'public/shops/post_form', f: f  %>
  <%= f.submit "変更を保存", class: "btn btn-dark btn-sm mr-4 mt-3" %>
  <% end %>
  <%= link_to "削除", shop_path(@shop), class: "btn btn-dark btn-sm mr-4 mt-3", method: :delete, "data-confirm" => "本当に削除しますか？" %>
</div>