<div class="container text-center">
  <div class="row">
    <div class="col-sm-12">
      <h2 class="font-weight-bold">ジャンル編集</h2>
    </div>
  </div>
    <%= form_with model: [:admin, @genre], local: true do |f| %>
    <div class="row">
      <div class="col-xs-4 mx-auto">
        <%= f.label "ジャンル名" %>
        <%= f.text_field :name, class: "form-control mb-2" %>
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
    </div>
    <% end %>
  </div>
</div>